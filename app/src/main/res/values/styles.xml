<resources>

    <!-- Base application theme. -->

    <style name="AppTheme" parent="@android:style/Theme.Holo.Light">
        <item name="android:typeface">sans</item>
        <item name="android:actionBarItemBackground">@drawable/selectable_background_gradenator</item>
        <item name="android:dropDownListViewStyle">@style/DropDownListView.Gradenator</item>
        <item name="android:actionBarTabStyle">@style/ActionBarTabStyle.Gradenator</item>
        <item name="android:actionDropDownStyle">@style/DropDownNav.Gradenator</item>
        <item name="android:actionBarStyle">@style/ActionBar.Solid.Gradenator</item>
        <item name="android:actionModeBackground">@drawable/cab_background_top_gradenator</item>
        <item name="android:actionModeSplitBackground">@drawable/cab_background_bottom_gradenator</item>
        <item name="android:actionModeCloseButtonStyle">@style/ActionButton.CloseMode.Gradenator</item>
        <item name="android:homeAsUpIndicator"> @drawable/ic_drawer</item>

    </style>

        <style name="Theme.Gradenator" parent="@android:style/Theme.Holo">
            <item name="android:actionBarItemBackground">@drawable/selectable_background_gradenator</item>
            <item name="android:popupMenuStyle">@style/PopupMenu.Gradenator</item>
            <item name="android:dropDownListViewStyle">@style/DropDownListView.Gradenator</item>
            <item name="android:actionBarTabStyle">@style/ActionBarTabStyle.Gradenator</item>
            <item name="android:actionDropDownStyle">@style/DropDownNav.Gradenator</item>
            <item name="android:actionBarStyle">@style/ActionBar.Solid.Gradenator</item>
            <item name="android:actionModeBackground">@drawable/cab_background_top_gradenator</item>
            <item name="android:actionModeSplitBackground">@drawable/cab_background_bottom_gradenator</item>
            <item name="android:actionModeCloseButtonStyle">@style/ActionButton.CloseMode.Gradenator</item>


        </style>

        <style name="ActionBar.Solid.Gradenator" parent="@android:style/Widget.Holo.ActionBar.Solid">
            <item name="android:background">@drawable/ab_solid_gradenator</item>
            <item name="android:backgroundStacked">@drawable/ab_stacked_solid_gradenator</item>
            <item name="android:backgroundSplit">@drawable/ab_bottom_solid_gradenator</item>
            <item name="android:progressBarStyle">@style/ProgressBar.Gradenator</item>
        </style>

    <style name="EditText.Gradenator" parent="android:Widget.EditText">
        <item name="android:background">@drawable/apptheme_edit_text_holo_light</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSelectHandle">@drawable/apptheme_text_select_handle_middle</item>
        <item name="android:textSelectHandleLeft">@drawable/apptheme_text_select_handle_left</item>
        <item name="android:textSelectHandleRight">@drawable/apptheme_text_select_handle_right</item>
    </style>

        <style name="ActionBar.Transparent.Gradenator" parent="@android:style/Widget.Holo.ActionBar">
            <item name="android:background">@drawable/ab_transparent_gradenator</item>
            <item name="android:progressBarStyle">@style/ProgressBar.Gradenator</item>
        </style>

        <style name="PopupMenu.Gradenator" parent="@android:style/Widget.Holo.ListPopupWindow">
            <item name="android:popupBackground">@drawable/menu_dropdown_panel_gradenator</item>
        </style>

        <style name="DropDownListView.Gradenator" parent="@android:style/Widget.Holo.ListView.DropDown">
            <item name="android:listSelector">@drawable/selectable_background_gradenator</item>
        </style>

        <style name="ActionBarTabStyle.Gradenator" parent="@android:style/Widget.Holo.ActionBar.TabView">
            <item name="android:background">@drawable/tab_indicator_ab_gradenator</item>
        </style>

        <style name="DropDownNav.Gradenator" parent="@android:style/Widget.Holo.Spinner">
            <item name="android:background">@drawable/spinner_background_ab_gradenator</item>
            <item name="android:popupBackground">@drawable/menu_dropdown_panel_gradenator</item>
            <item name="android:dropDownSelector">@drawable/selectable_background_gradenator</item>
        </style>

        <style name="ProgressBar.Gradenator" parent="@android:style/Widget.Holo.ProgressBar.Horizontal">
            <item name="android:progressDrawable">@drawable/progress_horizontal_gradenator</item>
        </style>

        <style name="ActionButton.CloseMode.Gradenator" parent="@android:style/Widget.Holo.ActionButton.CloseMode">
            <item name="android:background">@drawable/btn_cab_done_gradenator</item>
        </style>

        <style name="card.header_button_base.overflow" >
            <item name="android:background">@drawable/card_menu_button_overflow</item>
        </style>

        <!-- this style is only referenced in a Light.DarkActionBar based theme -->
        <style name="Theme.Gradenator.Widget" parent="@android:style/Theme.Holo">
            <item name="android:popupMenuStyle">@style/PopupMenu.Gradenator</item>
            <item name="android:dropDownListViewStyle">@style/DropDownListView.Gradenator</item>
        </style>


</resources>
