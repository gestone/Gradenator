<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:padding="@dimen/card_padding"
                android:layout_height="wrap_content">
    <TextView
        android:id="@+id/category_header"
        android:textSize="30sp"
        android:textColor="@color/card_text"
        android:text="Homework"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/percentage_background"/>

    <TextView
        android:textColor="@color/card_text"
        android:text="20% weight"
        android:id="@+id/category_weight_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:layout_below="@+id/number_of_assignments"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <TextView
        android:textColor="@color/card_text"
        android:text="No assignments"
        android:id="@+id/number_of_assignments"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/category_header"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <com.gradenator.CustomViews.RoundedLetterView
        android:layout_alignParentRight="true"
        android:src="@color/card_text"
        android:layout_width="75dp"
        android:id="@+id/percentage_background"
        android:layout_height="75dp"/>

</RelativeLayout>